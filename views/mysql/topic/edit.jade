extends ../layout
block content
  artcle
      form(action='/topic/'+topic.id+'/edit', method='post')
        p
          input(type='text', value=topic.title, name='title' placeholder='title')
        p
          textarea(name='description',placeholder='description')
            =topic.description
        p
          input(type='text' value=topic.author name='author' placeholder='author')
        p
          input(type='submit')
  ul
    li
      a(href='/topic/add') add
